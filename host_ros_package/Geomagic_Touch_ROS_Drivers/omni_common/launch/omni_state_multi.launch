<launch>
  <arg name="reference_frame" default="/map"/>
  <arg name="units" default="mm"/>
  <arg name="publish_rate" default="1000"/>
  <arg name="omni_name" default="phantom"/>
  <arg name="device" default="default_device"/>
  
  <node name="omni_state1" pkg="omni_common" type="omni_state" args='"device1"' output="screen"> 
    <param name="omni_name" value="device1"/>
    <param name="publish_rate" value="$(arg publish_rate)"/>
    <param name="reference_frame" value="$(arg reference_frame)"/>
    <param name="units" value="$(arg units)"/>
  </node>

  <node name="omni_state2" pkg="omni_common" type="omni_state" args='"device2"' output="screen"> 
    <param name="omni_name" value="device2"/>
    <param name="publish_rate" value="$(arg publish_rate)"/>
    <param name="reference_frame" value="$(arg reference_frame)"/>
    <param name="units" value="$(arg units)"/>
  </node>

</launch>
