<?xml version="1.0"?>
<launch>
  <arg name="robot_name" default=""/>
  <arg name="another_device" default="unity"/>

  <arg name="unity" default="false"/>
  <arg name="rsa" default="false"/>
  <arg name="rand_agent" default="false"/>

  <param name="unity" value="$(arg unity)" type="bool"/>
  <param name="rsa" value="$(arg rsa)" type="bool"/>
  <param name="rand_agent" value="$(arg rand_agent)" type="bool"/>

  <remap from="/$(arg another_device)/joy_command" to="/joy_command"/>
  
  <!-- joy2target node -->
  <node name="joy2target_converter" pkg="ur10_python_interface" type="joy2target.py" args="$(arg robot_name)" output="log"/>
  
  <!-- ik solver node -->
  <node name="ik_solver" pkg="ur10_python_interface" type="ik_publisher" args="$(arg robot_name)" output="screen"/>

  <!-- teleop controller node -->

  <node name="teleop_controller" pkg="ur10_python_interface" type="teleop_controller.py" args="$(arg robot_name)" output="log"/>
 
</launch>