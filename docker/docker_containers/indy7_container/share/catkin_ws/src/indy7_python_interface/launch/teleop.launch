<?xml version="1.0"?>
<launch>
  <arg name="robot_name" default="indy7"/>
  <group ns="$(arg robot_name)">
    <node name="ik_solver" pkg="indy7_python_interface" type="ik_publisher" args="$(arg robot_name)" output="screen"/>
    <node name="joy2target_converter" pkg="indy7_python_interface" type="joy2target.py" args="$(arg robot_name)" output="screen"/>
    <node name="teleop_controller" pkg="indy7_python_interface" type="teleop_controller.py" args="$(arg robot_name)" output="screen"/> 
  </group>
</launch>