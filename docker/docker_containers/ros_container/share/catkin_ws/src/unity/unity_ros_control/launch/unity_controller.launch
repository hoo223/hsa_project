 <launch>
    <arg name="limited" default="false"  doc="If true, limits joint range [-PI, PI] on all joints." />
    <arg name="transmission_hw_interface" default="hardware_interface/VelocityJointInterface" />

    <!--include file="$(find ros_tcp_endpoint)/launch/endpoint.launch"/-->
    <group ns="/unity">
        <param name="controller_type" type="string" value="vel"/>

        <!-- send robot urdf to param server -->
        <include file="$(find ur_description)/launch/ur10_upload.launch">
            <arg name="limited" value="$(arg limited)"/>
            <arg name="transmission_hw_interface" value="$(arg transmission_hw_interface)"/>
        </include>

        <node name="unity_hardware_interface" pkg="unity_ros_control" type="unity_hardware_interface" output="screen"/>

        <!-- Load controller settings -->
        <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur10.yaml" command="load"/>
        <!--rosparam file="$(find unity_ros_control)/config/ur10_controllers.yaml" command="load"/-->

        <!-- spawn controller manager -->
        <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn /unity/arm_controller" respawn="false" output="screen"/>
arm_controller
        <!-- load other controllers -->
        <node name="ros_control_controller_manager" pkg="controller_manager" type="controller_manager" args="load /unity/joint_group_velocity_controller" respawn="false" output="screen"/>
    </group>
 </launch>